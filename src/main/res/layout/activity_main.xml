<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <com.example.countdownview.CountDownView
       android:id="@+id/count_down_time_1"
       android:layout_width="@dimen/count_down_w"
       android:layout_height="@dimen/count_down_h"
       android:layout_marginTop="50dp"
       android:layout_centerHorizontal="true"/>

   <com.example.countdownview.CountDownView
       android:layout_below="@id/count_down_time_1"
       android:id="@+id/count_down_time_2"
       android:layout_width="@dimen/count_down_w"
       android:layout_height="@dimen/count_down_h"
       android:layout_marginTop="50dp"
       android:layout_centerHorizontal="true"/>


   <com.example.countdownview.CountDownView
       android:layout_below="@id/count_down_time_2"
       android:id="@+id/count_down_time_3"
       android:layout_width="@dimen/count_down_w"
       android:layout_height="@dimen/count_down_h"
       android:layout_marginTop="50dp"
       android:layout_centerHorizontal="true"/>


   <com.example.countdownview.CountDownView
       android:layout_below="@id/count_down_time_3"
       android:id="@+id/count_down_time_4"
       android:layout_width="@dimen/count_down_w"
       android:layout_height="@dimen/count_down_h"
       android:layout_marginTop="50dp"
       android:layout_centerHorizontal="true"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="From_Top"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:layout_marginRight="30dp"
       android:layout_alignTop="@+id/count_down_time_1"
       android:layout_toLeftOf="@+id/count_down_time_1"
       android:layout_toStartOf="@+id/count_down_time_1" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="From_Bottom"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:layout_marginRight="30dp"
       android:layout_alignTop="@+id/count_down_time_2"
       android:layout_toLeftOf="@+id/count_down_time_2"
       android:layout_toStartOf="@+id/count_down_time_2" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="From_Left"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:layout_marginRight="30dp"
       android:layout_alignTop="@+id/count_down_time_3"
       android:layout_toLeftOf="@+id/count_down_time_3"
       android:layout_toStartOf="@+id/count_down_time_3" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="From_Right"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:layout_marginRight="30dp"
       android:layout_alignTop="@+id/count_down_time_4"
       android:layout_toLeftOf="@+id/count_down_time_4"
       android:layout_toStartOf="@+id/count_down_time_4" />


</RelativeLayout>
